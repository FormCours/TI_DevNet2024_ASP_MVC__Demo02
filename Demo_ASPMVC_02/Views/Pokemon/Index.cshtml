@model IEnumerable<Demo_ASPMVC_02.Models.PokemonViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Ajouter un nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreEvolutionNumero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreEvolution.Nom)
            </td>
            <td>
                <a asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.Numero">Modifier</a> |
                <a asp-controller="Pokemon" asp-action="Details" asp-route-id="@item.Numero">Details</a> |
                <a asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.Numero">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
